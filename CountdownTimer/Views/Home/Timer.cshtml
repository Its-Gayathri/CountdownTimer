@using CountdownTimer.Models;
@model TimerPageViewModel;
@{
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/Pages/timer.css" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="div-page-Heading"></div>
        <div class="row">
            <button type="button" class="btn btn-labeled btn-primary col-sm-2" id="btn-add-reminder">
                <span class="btn-label"><i class="bi bi-calendar2-plus"></i></span>Add Reminder
            </button>
        </div>
        <div class="row">
            <div class="div-reminder-list col-4">
                <div class="col list-group">
                    <div href="#" class="list-group-item list-group-item-action active border border-3">
                        Gayathri's Bday
                        <button type="button" class="close btn-reminder-close" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div href="#" class="list-group-item list-group-item-action list-group-item-primary border border-3">
                        Renew Insurance
                        <button type="button" class="close btn-reminder-close" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div href="#" class="list-group-item list-group-item-action list-group-item-primary border border-3">
                        Salary Day
                        <button type="button" class="close btn-reminder-close" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="div-timer-clock-header col-5">
                
                <div class="div-timer-clock-body">
                    <div class="clock-column">
                        <p class="clock-day clock-timer"></p>
                        <p class="clock-label">Days</p>
                    </div>

                    <div class="clock-column">
                        <p class="clock-hours clock-timer"></p>
                        <p class="clock-label">Hours</p>
                    </div>

                    <div class="clock-column">
                        <p class="clock-minutes clock-timer"></p>
                        <p class="clock-label">Minutes</p>
                    </div>

                    <div class="clock-column">
                        <p class="clock-seconds clock-timer"></p>
                        <p class="clock-label">Seconds</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
</body>
</html>
