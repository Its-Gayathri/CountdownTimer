<div class="modal fade" id="modal-addReminder" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Reminder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3 col-8">
                        <label for="id-reminderName" class="form-label">Reminder Name</label>
                        <input type="text" class="form-control" id="id-reminderName">
                    </div>
                    <div class="fetched-date mb-3 col-8">
                        <label for="id-reminderDate" class="form-label">Reminder Date</label>
                        <input type="text" class="form-control" value="07/07/2017" id="id-reminderDate">
                        <i class="bi bi-calendar3"></i>
                    </div>

                        <div class="dropdown mb-3 col-8">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownReminderType" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Reminder Type
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownReminderType">
                                <a class="dropdown-item" href="#">Anniversary</a>
                                <a class="dropdown-item" href="#">B'day</a>
                                <a class="dropdown-item" href="#">Bill Due Date</a>
                                <a class="dropdown-item" href="#">Festival</a>
                                <a class="dropdown-item" href="#">Holiday</a>
                                <a class="dropdown-item" href="#">Last Day</a>
                                <a class="dropdown-item" href="#">Other</a>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>           
        </div>
    </div>
</div>
