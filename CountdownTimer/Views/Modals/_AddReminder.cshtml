<div class="modal fade" id="modal-addReminder" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Reminder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="" class="form-label">Reminder Name</label>
                        <input type="email" class="form-control" id="exampleInputEmail1">
                    </div>
                    <div class="input-group date mb-3" data-provide="datepicker">
                        <label for="" class="form-label">Reminder Date</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="dateHelp">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                        <div id="dateHelp" class="form-text">Always Select future Dates for Adding a Reminder</div>
                    </div>
                    <div class="dropdown mb-3">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownReminderType" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Reminder Type
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownReminderType">
                            <a class="dropdown-item" href="#">Anniversary</a>
                            <a class="dropdown-item" href="#">B'day</a>
                            <a class="dropdown-item" href="#">Bill Due Date</a>
                            <a class="dropdown-item" href="#">Festival</a>
                            <a class="dropdown-item" href="#">Holiday</a>
                            <a class="dropdown-item" href="#">Last Day</a>
                            <a class="dropdown-item" href="#">Other</a>
                        </div>
                    </div>                  
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>*@
        </div>
    </div>
</div>
